{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/app/*": ["src/app/(frontend)/*"],
            "@/lib/*": ["src/lib/*"],
            "@/fields/*": ["src/fields/*"],
            "@/components/*": ["src/app/(frontend)/components/*"],
            "@/payload.config": ["src/payload.config.ts"],
            "@/payload.config.js": ["src/payload.config.ts"],
            "@/payload-types": ["src/payload-types.ts"],
            "@payload-config": ["src/payload.config.ts"]
        }
    },
    "include": [
        "src/types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        "src/payload.config.js"
    ],
    "exclude": ["node_modules"]
}
