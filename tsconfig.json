{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "src",
        "paths": {
            "@/payload.config": ["payload.config.ts"],
            "@/payload.config.js": ["payload.config.ts"],
            "@/*": ["app/(frontend)/*"]
            // "@/components/*": ["app/(frontend)/components/*"],
            // "@/*": ["*"]
        }
    },
    "include": [
        "src/types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        "src/payload.config.js"
    ],
    "exclude": ["node_modules"]
}
